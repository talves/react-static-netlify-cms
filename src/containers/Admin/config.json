{
  "backend": {
    "name": "git-gateway",
    "branch": "master"
  },
  "display_url": "https://react-static-cms.netlify.com",
  "media_folder": "public/images",
  "public_folder": "images",
  "collections": [
    {
      "name": "docs",
      "label": "Document",
      "description": "Make sure to read the documentation at NetlifyCMS.org to configure these settings.\n",
      "folder": "documentation",
      "slug": "{{year}}-{{month}}-{{day}}-{{slug}}",
      "create": true,
      "fields": [
        {
          "label": "Title",
          "name": "title",
          "widget": "string",
          "tagname": "h1"
        },
        {
          "label": "Publish Date",
          "name": "date",
          "widget": "datetime",
          "format": "YYYY-MM-DD hh:mma"
        },
        {
          "label": "Cover Image",
          "name": "image",
          "widget": "image",
          "required": false,
          "tagname": ""
        },
        {
          "label": "Content",
          "name": "body",
          "widget": "markdown"
        }
      ]
    }
  ]
}